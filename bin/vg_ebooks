#!/usr/bin/env ruby

require 'twitter_ebooks'

bot = Ebooks::Bot.new('vg_ebooks') do |bot|
  bot.consumer_key       = ENV['TWITTER_CONSUMER_KEY']
  bot.consumer_secret    = ENV['TWITTER_CONSUMER_SECRET']
  bot.oauth_token        = ENV['TWITTER_OATH_TOKEN']
  bot.oauth_token_secret = ENV['TWITTER_OATH_TOKEN_SECRET']

  bot.on_follow do |user|
    # Follow a user back
    bot.follow(user[:screen_name])
  end
end

EM.run { bot.start }
